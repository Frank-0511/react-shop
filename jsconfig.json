{
  "compilerOptions": {
    "module": "es6",
    "target": "es2020",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@containers/*": ["src/containers/*"],
      "@components/*": ["src/components/*"],
      "@routes/*": ["src/routes/*"],
      "@pages/*": ["src/pages/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@context/*": ["src/context/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@logos/*": ["src/assets/logos/*"]
    }
  },
  "exclude": ["dist", "node_modules", ".vscode"]
}
